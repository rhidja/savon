{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>{% block title %}Gestion Stock Savon{% endblock %}</title>

	{% block stylesheets %}
		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	{% endblock %}
</head>

<body>
	<div class="container">
		<div id="header" class="jumbotron">
			<h1>Gestion de stcok Savon</h1>
			<p>
				Ce projet est fait pour la gestion de la fabrication du savon, de l'achat des ingédients au produit final
			</p>
		</div>

		<div class="row">
			<div id="menu" class="col-md-3">
				<h3>Menu</h3>
				<ul class="nav nav-pills nav-stacked">
					<li><a href="{{ path('ram_accueil') }}">Accueil</a></li>
					<li><a href="{{ path('ram_produit_home') }}">Produits</a></li>
					<li><a href="{{ path('ram_ingredient_home') }}">Ingrédients</a></li>
					<li><a href="{{ path('ram_recette_home') }}">Recettes</a></li>
				</ul>

				<h4>Derniers produits</h4>
				{{ render(controller("RamSavonBundle:Produit:menu", {'limit': 3})) }}
			</div>
			<div id="content" class="col-md-9">
				{% block body %}
				{% endblock %}
			</div>
		</div>

		<hr>

		<footer>
			<p>The Ram's the limit © {{ 'now'|date('Y') }} and beyond.</p>
		</footer>
	</div>

	{% block javascripts %}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	{% endblock %}
</body>
</html>