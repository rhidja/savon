{# src/Ram/SavonBundle/Resources/views/Produit/form.html.twig #}

<div class="well">
	{{ form_start(form, {'action' : path('ram_recette_add'), 'attr': {'class': 'form-horizontal'}}) }}



	{{ form_errors(form) }}

	<div class="form-group">
		{{ form_label(form.nom, "Nom du recette", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.nom) }}
		<div class="col-md-9">
			{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.dureeSponification, "La durée de sponification", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.dureeSponification) }}
		<div class="col-sm-9">
			{{ form_widget(form.dureeSponification, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.dureeCure, "La durée de cure", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.dureeCure) }}
		<div class="col-sm-9">
			{{ form_widget(form.dureeCure, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.produit, "Produit", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.produit) }}
		<div class="col-md-9">
			{{ form_widget(form.produit, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.description, "Description de la recette", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.description) }}
		<div class="col-md-9">
			{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-md-12">
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary pull-right'}}) }}
		</div>
	</div>
  
	{{ form_end(form) }}
</div>
