{# src/Ram/SavonBundle/Resources/views/Recette/index.html.twig #}

{% extends "RamSavonBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block ram_savon_body %}
	<h1>Recettes</h1>
	<hr>

	<a href="{{ path('ram_recette_add') }}" class="btn btn-primary pull-right">
		<i class="glyphicon glyphicon-plus"> </i> Recette
	</a>		
	<br>
	<br>
	<table class="table table-striped table-hover">
		<thead>
			<tr class="info"> <td>Id</td> <td>Nom du recette</td><td>Produit</td><td>Durée de sponification</td> <td>Durée de cure</td> <td>Date</td></tr>
		</thead>
		<tbody>
			{% for recette in listRecettes %}
				<tr> 
					<td>{{ recette.id }}</td>
					<td> 
						<a href="{{ path('ram_recette_view', {'recette_id': recette.id}) }}"> 
							{{ recette.nom }}
						</a>
					</td>
					<td>{{ recette.produit.nom }}</td>
					<td>{{ recette.dureeSponification }}</td>
					<td>{{ recette.dureeCure }}</td>
					<td>{{ recette.dCre|date('d/m/Y') }}</td>
				</tr>
			{% else %}
				<tr>Pas (encore !) de recettes</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}