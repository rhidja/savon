{# src/Ram/SavonBundle/Resources/views/Recette/delete.html.twig #}

{% extends "::layout.html.twig" %}

{% block title %}
  	Supprimer une recette
{% endblock %}

{% block section %}

<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
		<h1 class="page-header">Recettes</h1>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					Supprimmer une recette existante
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<p>
								Etes-vous certain de vouloir supprimer la recette "{{ recette.nom }}" ?
							</p>

							<form action="{{ path('ram_recette_delete', {'recette_id': recette.id}) }}" method="post">
								<a href="{{ path('ram_recette_view', {'recette_id': recette.id}) }}" class="btn btn-default">
									<i class="glyphicon glyphicon-chevron-left"></i>
									Retour Ã  la recette
								</a>
								<input type="submit" value="Supprimer" class="btn btn-danger" />
								{{ form_rest(form) }}
							</form>
						</div>
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
</div>
<!-- /#page-wrapper -->
{% endblock %}