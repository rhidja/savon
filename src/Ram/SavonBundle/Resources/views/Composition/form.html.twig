{# src/Ram/SavonBundle/Resources/views/Recette/form.html.twig #}

<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	{{ form_errors(form) }}

	<div class="form-group">
		{{ form_label(form.recette, "Nom de la recette", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.recette) }}
		<div class="col-md-9">
			{{ form_widget(form.recette, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.ingredient, "Nom de l'ingrédient", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.ingredient) }}
		<div class="col-sm-9">
			{{ form_widget(form.ingredient, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.quantite, "La quantité", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.quantite) }}
		<div class="col-sm-9">
			{{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.unite, "L'unité", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.unite) }}
		<div class="col-md-9">
			{{ form_widget(form.unite, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-12">
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary pull-right'}}) }}
		</div>
	</div>

	{{ form_rest(form) }}

	{{ form_end(form) }}
</div>