{# src/Ram/SavonBundle/Resources/views/Ingredient/form.html.twig #}

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

{{ form_errors(form) }}

<div class="form-group">
	{{ form_label(form.nom, "Nom du ingredient", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	{{ form_errors(form.nom) }}
	<div class="col-sm-9">
		{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
	</div>
</div>

<div class="form-group">
	{{ form_label(form.type, "Le type du ingredient", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	{{ form_errors(form.type) }}
	<div class="col-sm-9">
		{{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
	</div>
</div>

<div class="form-group">
	{{ form_label(form.unite, "Unité de l'ingrédient", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	{{ form_errors(form.unite) }}
	<div class="col-sm-9">
		{{ form_widget(form.unite, {'attr': {'class': 'form-control'}}) }}
	</div>
</div>

<div class="form-group">
	{{ form_label(form.categorie, "Categorie", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	{{ form_errors(form.categorie) }}
	<div class="col-sm-9">
		{{ form_widget(form.categorie, {'attr': {'class': 'form-control','rows' : '10'}}) }}
	</div>
</div>

<div class="form-group">
	{{ form_label(form.description, "Description de l'ingrédient", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	{{ form_errors(form.description) }}
	<div class="col-sm-9">
		{{ form_widget(form.description, {'attr': {'class': 'form-control','rows' : '10'}}) }}
	</div>
</div>

<div class="form-group">
	<div class="col-sm-12">
		{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary pull-right'}}) }}
	</div>
</div>

{{ form_rest(form) }}

{{ form_end(form) }}
