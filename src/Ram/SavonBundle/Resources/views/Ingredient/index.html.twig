{# src/Ram/SavonBundle/Resources/views/Ingredient/index.html.twig #}

{% extends "::layout.html.twig" %}

{% block title %}
	Liste des ingrédients
{% endblock %}

{% block section %}

	<div id="page-wrapper">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Ingrédients</h1>
			</div>
			<!-- /.col-lg-12 -->
		</div>
		<!-- /.row -->
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading clearfix">
						<div class="col-md-6">
							<h4>Table des ingrédients</h4>
						</div>
						<div class="pull-right">
							<a href="{{ path('ram_ingredient_add') }}" class="btn btn-primary" title="Ajouter un nouvel ingrédient">	<i class="glyphicon glyphicon-plus"></i>
							</a>
						</div>
					</div>
					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="dataTable_wrapper">
							<table class="table table-striped table-bordered table-hover" id="dataTables-example">
								<thead>
									<tr>
										<th>#</th>
										<th>Nom de l'ingrédient</th>
										<th>Coefficient</th>
									</tr>
								</thead>
								<tbody>
									{% for ingredient in listIngredients %}
										<tr> 
											<td>{{ ingredient.id }}</td>
											<td> 
												<a href="{{ path('ram_ingredient_view', {'ingredient_id': ingredient.id}) }}"> 
													{{ ingredient.nom }}
												</a>
											</td>
											<td>{{ ingredient.coefficient }}</td>
										</tr>
									{% else %}
										<tr>Pas (encore !) de ingredients</tr>
									{% endfor %}                         
								</tbody>
							</table>
						</div>
					</div>
					<!-- /.panel-body -->
				</div>
				<!-- /.panel -->
			</div>
			<!-- /.col-lg-12 -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /#page-wrapper -->
{% endblock %}

{% block javascripts %}
	{{ parent()}}
	<script>
		$(document).ready(function() {
			$('#dataTables-example').DataTable({
				responsive: true
			});
		});
	</script>
{% endblock %}