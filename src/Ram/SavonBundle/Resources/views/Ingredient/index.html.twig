{# src/Ram/SavonBundle/Resources/views/Advert/index.html.twig #}

{% extends "RamSavonBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block ram_savon_body %}

	<h3>Liste des produits</h3>

	<table class="table table-striped table-hover">
		<thead>
			<tr class="info"> <td>Id</td> <td>Nom du produit</td> <td>Type</td> <td>Date</td></tr>
		</thead>
		<tbody>
			{% for produit in listProduits %}
				<tr> 
					<td>{{ produit.id }}</td>
					<td> 
						<a href="{{ path('ram_savon_view', {'id': produit.id}) }}"> 
							{{ produit.nom }}
						</a>
					</td>
					<td>{{ produit.type }}</td>
					<td>{{ produit.dCre|date('d/m/Y') }}</td>
				</tr>
			{% else %}
				<tr>Pas (encore !) de produits</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}