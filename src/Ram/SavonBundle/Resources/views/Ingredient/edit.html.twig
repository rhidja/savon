{# src/Ram/SavonBundle/Resources/views/Ingredient/edit.html.twig #}

{% extends "::layout.html.twig" %}

{% block title %}
	Modifier un ingrédient
{% endblock %}

{% block section %}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Ingrédients</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <div class="col-md-6">
                        <h4>Modifier un ingrédient</h4>
                    </div>
                    <div class="pull-right">
                        <div class="btn-group" role="group" aria-label="...">
                            <a href="{{ path('ram_ingredient_view', {'ingredient_id': ingredient.id}) }}" class="btn btn-default" title="Retour à la fiche de l'ingrédient">
                                <i class="glyphicon glyphicon-chevron-left"></i>
                            </a>

                            <a href="{{ path('ram_ingredient_delete', {'ingredient_id': ingredient.id}) }}" class="btn btn-danger" title="Supprimer l'ingrédient">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            {{ include("RamSavonBundle:Ingredient:form.html.twig") }}
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
{% endblock %}