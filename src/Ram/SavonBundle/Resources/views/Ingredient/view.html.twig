{# src/Ram/SavonBundle/Resources/view/Ingredient/view.html.twig #}

{% extends "RamSavonBundle::layout.html.twig" %}

{% block title %}
  	Fiche d'un ingrédient - {{ parent() }}
{% endblock %}

{% block ram_savon_body %}

  	<h2>{{ ingredient.nom }}</h2>

  	<div class="well">
    	{{ ingredient.unite }}
  	</div>

  	<p>
	    <a href="{{ path('ram_ingredient_home') }}" class="btn btn-default">
	      	<i class="glyphicon glyphicon-chevron-left"></i>
	      	Retour à la liste
	    </a>
	    <a href="{{ path('ram_ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-default">
	      	<i class="glyphicon glyphicon-edit"></i>
	      	Modifier l'annonce
	    </a>
	    <a href="{{ path('ram_ingredient_delete', {'id': ingredient.id}) }}" class="btn btn-danger">
	      	<i class="glyphicon glyphicon-trash"></i>
	      	Supprimer l'annonce
	    </a>
  	</p>

{% endblock %}