{# src/Ram/SavonBundle/Resources/view/Produit/view.html.twig #}

{% extends "RamSavonBundle::layout.html.twig" %}

{% block title %}
  	Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ram_savon_body %}

  	<h2>{{ produit.nom }}</h2>
  	<i>Par {{ produit.type }}, le {{ produit.dCre|date('d/m/Y') }}</i>

  	<div class="well">
    	{{ produit.description }}
  	</div>

  	<p>
	    <a href="{{ path('ram_savon_home') }}" class="btn btn-default">
	      	<i class="glyphicon glyphicon-chevron-left"></i>
	      	Retour Ã  la liste
	    </a>
	    <a href="{{ path('ram_savon_edit', {'id': produit.id}) }}" class="btn btn-default">
	      	<i class="glyphicon glyphicon-edit"></i>
	      	Modifier l'annonce
	    </a>
	    <a href="{{ path('ram_savon_delete', {'id': produit.id}) }}" class="btn btn-danger">
	      	<i class="glyphicon glyphicon-trash"></i>
	      	Supprimer l'annonce
	    </a>
  	</p>

{% endblock %}