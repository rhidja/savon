{# src/Ram/SavonBundle/Resources/views/Recette/formIngredient.html.twig #}

<div class="well">
	{{ form_start(form, {'action' : path('ram_serie_ingredient_add'), 'attr': {'class': 'form-horizontal'}}) }}

	{{ form_errors(form) }}

	<div class="form-group">
		{{ form_label(form.serie, "Nom de la serie", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.serie) }}
		<div class="col-md-9">
			{{ form_widget(form.serie, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.ingredient, "Nom de l'ingrédient", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.ingredient) }}
		<div class="col-sm-9">
			{{ form_widget(form.ingredient, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.quantity, "La quantité", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.quantity) }}
		<div class="col-sm-9">
			{{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.unite, "L'unité", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
		{{ form_errors(form.unite) }}
		<div class="col-sm-9">
			{{ form_widget(form.unite, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-12">
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary pull-right'}}) }}
		</div>
	</div>

	{{ form_rest(form) }}

	{{ form_end(form) }}
</div>