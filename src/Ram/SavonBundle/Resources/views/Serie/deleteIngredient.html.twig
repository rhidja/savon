{# src/Ram/SavonBundle/Resources/views/Recette/delete.html.twig #}

{% extends "::layout.html.twig" %}

{% block title %}
  	Supprimer une série
{% endblock %}

{% block section %}
<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
		<h1 class="page-header">Recettes</h1>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					Supprimmer une série existante
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<p>
								Etes-vous certain de vouloir supprimer cet ingrédient "{{ serieIngredient.ingredient.nom }}" de la serie "{{ serieIngredient.serie.numSerie }}" ?
							</p>
							<form action="{{ path('ram_serie_ingredient_delete', {'serie_id': serieIngredient.serie.id, 'ingredient_id' : serieIngredient.ingredient.id}) }}" method="post">
								<a href="{{ path('ram_serie_view', {'serie_id': serieIngredient.serie.id}) }}" class="btn btn-default">
									<i class="glyphicon glyphicon-chevron-left"></i>
									Retour à la serie
								</a>
								<input type="submit" value="Supprimer" class="btn btn-danger" />
								{{ form_rest(form) }}
							</form>

						</div>
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
</div>
<!-- /#page-wrapper -->
{% endblock %}