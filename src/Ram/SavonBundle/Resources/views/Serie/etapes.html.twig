<div class="panel panel-default">
	<div class="panel-heading clearfix">
		<div class="col-md-6"><h5>Les étapes</5></div>
		<div class="col-md-6">
			<div class="pull-right">
				<div class="btn-group" role="group" aria-label="...">
					<a id="serieAddButton" href="#" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modalEtape" title="Ajouter une nouvelle Serie">
						<i class="glyphicon glyphicon-plus"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
	<!-- /.panel-heading -->
	<div class="panel-body">
		<ul class="chat">		
			{% for etape in serie.etapes %}
				{% if loop.index is divisibleby(2) %}
					<li class="right clearfix">
						<span class="chat-img pull-right">
							<img src="http://placehold.it/50/FA6F57/fff" alt="User Avatar" class="img-circle" />
						</span>
						<div class="chat-body clearfix">
							<div class="header">
								<small class=" text-muted">
									<i class="fa fa-clock-o fa-fw"></i> {{ etape.duree }} mins</small>
								<strong class="pull-right primary-font">{{ etape.titre }} {{ etape.ordre }}</strong>
							</div>
							<p>
								{{ etape.description }}
							</p>
						</div>
					</li>
				{% else %}
					<li class="left clearfix">
						<span class="chat-img pull-left">
							<img src="http://placehold.it/50/55C1E7/fff" alt="User Avatar" class="img-circle" />
						</span>
						<div class="chat-body clearfix">
							<div class="header">
								<strong class="primary-font">{{ etape.titre }}</strong>
								<small class="pull-right text-muted">
									<i class="fa fa-clock-o fa-fw"></i> {{ etape.duree }} mins
								</small>
							</div>
							<p>
								{{ etape.description }}
							</p>
						</div>
					</li>					
				{% endif %}
			{% else %}
				Pas (encore !) d'étapes</tr>
			{% endfor %}
		</ul>
	</div>
	<!-- /.panel-body -->
</div>
<!-- /.panel -->

<!-- Modal -->
<div class="modal fade" id="modalEtape" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">Ajouter une étape</h4>
			</div>
			<div class="modal-body">
				<!-- Formulaire ajout nouvelle série. -->
				{{ include("RamSavonBundle:Serie:formEtape.html.twig") }}
			</div>
		</div>
	</div>
</div>
<!-- / Modal -->