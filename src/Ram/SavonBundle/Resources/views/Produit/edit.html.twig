{% extends "RamSavonBundle::layout.html.twig" %}

{% block title %}
  	Modifier un produit - {{ parent() }}
{% endblock %}

{% block ram_savon_body %}

  	<h2>Modifier un produit</h2>

  	{{ include("RamSavonBundle:Produit:form.html.twig") }}

  	<p>
    	Vous éditez un produit déjà existant.
  	</p>

  	<p>
    	<a  ="{{ path('ram_savon_view', {'id': produit.id}) }}" class="btn btn-default">
