{# src/Ram/SavonBundle/Resources/views/Produit/delete.html.twig #}

{% extends "::layout.html.twig" %}


{% block title %}
Supprimer un produit
{% endblock %}

{% block section %}

<div id="page-wrapper">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Produits</h1>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					Supprimmer un produit existant
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<p>
								Etes-vous certain de vouloir supprimer le produit : <strong>"{{ produit.nom }}"</strong> ?
							</p>
							<form action="{{ path('ram_produit_delete', {'produit_id': produit.id}) }}" method="post">
								<a href="{{ path('ram_produit_view', {'produit_id': produit.id}) }}" class="btn btn-default">
									<i class="glyphicon glyphicon-chevron-left"></i>
									Retour au produit
								</a>
								<input type="submit" value="Supprimer" class="btn btn-danger" />
								{{ form_rest(form) }}
							</form>
						</div>
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
</div>
<!-- /#page-wrapper -->
{% endblock %}