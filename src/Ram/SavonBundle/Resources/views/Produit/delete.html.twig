{% extends "RamSavonBundle::layout.html.twig" %}

{% block title %}
  Supprimer un produit - {{ parent() }}
{% endblock %}

{% block ram_savon_body %}

  <h2>Supprimer un produit</h2>

  <p>
    Etes-vous certain de vouloir supprimer le produit "{{ produit.nom }}" ?
  </p>

  <form action="{{ path('ram_produit_delete', {'id': produit.id}) }}" method="post">
    <a href="{{ path('ram_produit_view', {'id': produit.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  l'annonce
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}